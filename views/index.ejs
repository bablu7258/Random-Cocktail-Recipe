<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Random Cocktail Recipe</title>
  <link rel="stylesheet" href="/styles/main.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>

  <div class="container">
    <h1>Random Cocktail Generator</h1>

    <% if (locals.error) { %>
      <p class="error-message"><%= error %></p>
    <% } else { %>
      <div class="recipe-card">
        <div class="recipe-image">
          <img src="<%= image %>" alt="A photo of <%= name %>" onerror="this.onerror=null;this.src='https://placehold.co/400x400/222/FFF?text=Image+Not+Found';">
        </div>
        <div class="recipe-details">
          <h2><%= name %></h2>
          
          <h3>Ingredients</h3>
          <ul>
            <% ingredients.forEach(item => { %>
              <li><strong><%= item.measure %></strong> <%= item.name %></li>
            <% }) %>
          </ul>

          <h3>Instructions</h3>
          <p><%= instructions %></p>
        </div>
      </div>
    <% } %>
    
    <a href="/" class="btn">Get Another Cocktail</a>
  </div>

</body>
</html>
